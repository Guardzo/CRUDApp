@page
@model CRUD.Pages.Users.UserModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-page="CreateUser" class="btn btn-primary" ><i class="bi bi-pencil-square"></i> &nbsp; Create New User</a>
        </div>
    </div>

    <br/><br/>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.MangoUser)
            {
            <tr>
                <td width="30%">@obj.Name</td>
                <td width="25%">@obj.Gender</td>
                <td width="25%">@obj.Email</td>
                <td width="20%">
                    <div>
                    <a asp-page="EditUser" asp-route-id="@obj.Id" class="btn btn-primary mx-2 rounded-3">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="DeleteUser" asp-route-id="@obj.Id" class="btn btn-danger mx-2 rounded-3">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                    </div>
                </td>
            </tr>
            }

           
        </tbody>
    </table>
</div>